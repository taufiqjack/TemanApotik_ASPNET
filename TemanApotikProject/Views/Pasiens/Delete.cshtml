@model TemanApotikProject.Models.Pasien

@{
    ViewBag.Title = "Hapus";
}

<h2>Hapus Data Pasien</h2>

<h3>Apakah anda yakin akan menghapus data ini?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nama Pasien")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nama_Pasien)
        </dd>

        <dt>
            @Html.DisplayName("Alamat Pasien")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Alamat_Pasien)
        </dd>

        <dt>
            @Html.DisplayName("Diagnosa Penyakit")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Diagnosa_Penyakit)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Hapus" class="btn btn-default" /> |
            @Html.ActionLink("Kembali ke List", "Index")
        </div>
    }
</div>
